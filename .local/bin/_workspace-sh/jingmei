#!/usr/bin/env bash

# Provide a variable with the location of this script.
scriptPath="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source "${scriptPath}/../script-utils/test.sh"

#######################################################################

source "./utils.sh"

MainScreenName="eDP1"
Mode="1920x1080"

AboveScreen="DP2-2"
RightOfScreen="DP1-1"

#######################################################################

if ! screen.check ${AboveScreen} ${Mode}; then
  exit 1;
fi

if ! screen.check ${RightOfScreen} ${Mode}; then
  exit 1;
fi

xrandr  --output ${MainScreenName} --primary                \
        --output ${RightOfScreen} --above ${MainScreenName} \
        --mode        ${Mode}                               \
        --dpi         96                                    \
        --rate        60.00                                 \
        --rotate      normal                                \
        --output ${AboveScreen} --right-of ${RightOfScreen} \
        --mode        ${Mode}                               \
        --dpi         96                                    \
        --rate        60.00                                 \
        --rotate      left                                  \
        ${@}
